# PHP php-osx.liip.ch
export PATH=/usr/local/php5/bin:$PATH
alias phpon54="rm /usr/local/php5 && ln -s /usr/local/php5-5.4.19-20130828-154910/ /usr/local/php5"
alias phpon55="rm /usr/local/php5 && ln -s /usr/local/php5-5.5.3-20130828-144952/ /usr/local/php5"

# Personal Aliases
[[ -s "$HOME/.aliases" ]] && source "$HOME/.aliases"

